<Page
    x:Class="IntelligentMirror.Pages.ResponsePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelligentMirror.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock
            Text="Setup the UI!&#x0a;Add &lt;Image&gt; and some &lt;TextBox&gt;.&#x0a;If you expect some text to be long and require scrolling, put that &lt;TextBox&gt; in &lt;ScrollViewer&gt;.&#x0a;Maybe try using also &lt;Border&gt;?&#x0a;If you can set them in &lt;Grid&gt; without explicit margin values that's even better!&#x0a;Remember about 'Back' button!&#x0a;&#x0a;PS. You can open Toolbox by pressing CTRL+ALT+X and Properties window by pressing F4"
            FontSize="40"
            Margin="30"
            VerticalAlignment="Center"
            TextWrapping="WrapWholeWords"
            HorizontalAlignment="Center" Height="Auto" Width="Auto"></TextBlock>
    </Grid>
</Page>
